  "words": [
    {"id": "c1_idioms_001", "word": "break the ice", "phonetic": "/breɪk ðə aɪs/", "part_of_speech": "idiom", "translation_uz": "gap ochmoq", "definition": "To start a conversation in an awkward situation", "example": "He told a joke to break the ice.", "example_uz": "U gap ochish uchun hazil aytdi.", "usage_notes": "Used in social situations"},
    {"id": "c1_idioms_002", "word": "piece of cake", "phonetic": "/piːs əv keɪk/", "part_of_speech": "idiom", "translation_uz": "oson ish", "definition": "Something very easy", "example": "The test was a piece of cake.", "example_uz": "Test juda oson edi.", "usage_notes": "Informal"},
    {"id": "c1_idioms_003", "word": "cost an arm and a leg", "phonetic": "/kɒst ən ɑːm/", "part_of_speech": "idiom", "translation_uz": "juda qimmat", "definition": "To be very expensive", "example": "This car costs an arm and a leg.", "example_uz": "Bu mashina juda qimmat.", "usage_notes": "Informal, exaggeration"},
    {"id": "c1_idioms_004", "word": "hit the nail on the head", "phonetic": "/hɪt ðə neɪl/", "part_of_speech": "idiom", "translation_uz": "to'g'ri taxmin qilmoq", "definition": "To be exactly right", "example": "You hit the nail on the head!", "example_uz": "Siz to'g'ri aytdingiz!", "usage_notes": "Used when someone is correct"},
    {"id": "c1_idioms_005", "word": "under the weather", "phonetic": "/ˈʌndər ðə ˈweðər/", "part_of_speech": "idiom", "translation_uz": "kasal bo'lmoq", "definition": "Feeling ill or sick", "example": "I'm feeling under the weather.", "example_uz": "O'zimni yaxshi his qilmayapman.", "usage_notes": "Commonly used"},
    {"id": "c1_idioms_006", "word": "bite the bullet", "phonetic": "/baɪt ðə ˈbʊlɪt/", "part_of_speech": "idiom", "translation_uz": "qiyinchiliklarni yengmoq", "definition": "To face a difficult situation bravely", "example": "I had to bite the bullet and tell the truth.", "example_uz": "To'g'risini aytishga majbur bo'ldim.", "usage_notes": "Shows courage"},
    {"id": "c1_idioms_007", "word": "spill the beans", "phonetic": "/spɪl ðə biːnz/", "part_of_speech": "idiom", "translation_uz": "sirni oshkor qilmoq", "definition": "To reveal secret information", "example": "Don't spill the beans about the party.", "example_uz": "Ziyofat haqida sir saqlang.", "usage_notes": "Informal"},
    {"id": "c1_idioms_008", "word": "let the cat out of the bag", "phonetic": "/let ðə kæt/", "part_of_speech": "idiom", "translation_uz": "sirni oshkor qilmoq", "definition": "To reveal a secret accidentally", "example": "She let the cat out of the bag.", "example_uz": "U tasodifan sirni oshkor qildi.", "usage_notes": "Emphasizes accident"},
    {"id": "c1_idioms_009", "word": "once in a blue moon", "phonetic": "/wʌns ɪn ə bluː muːn/", "part_of_speech": "idiom", "translation_uz": "juda kam", "definition": "Very rarely", "example": "I go there once in a blue moon.", "example_uz": "U yerga juda kam boraman.", "usage_notes": "Emphasizes rarity"},
    {"id": "c1_idioms_010", "word": "add fuel to the fire", "phonetic": "/æd fjuːəl/", "part_of_speech": "idiom", "translation_uz": "olovga yonilg'i qo'shmoq", "definition": "To make a situation worse", "example": "His comment added fuel to the fire.", "example_uz": "Uning so'zi vaziyatni yomonlashtirdi.", "usage_notes": "Negative context"},
    {"id": "c1_idioms_011", "word": "the ball is in your court", "phonetic": "/ðə bɔːl/", "part_of_speech": "idiom", "translation_uz": "navbat sizda", "definition": "It's your decision or responsibility", "example": "I've done my part, the ball is in your court.", "example_uz": "Men o'zimni ishni qildim, endi navbat sizda.", "usage_notes": "From tennis"},
    {"id": "c1_idioms_012", "word": "burn the midnight oil", "phonetic": "/bɜːn ðə ˈmɪdnaɪt/", "part_of_speech": "idiom", "translation_uz": "kechgacha ishlamoq", "definition": "To work late into the night", "example": "Students burn the midnight oil before exams.", "example_uz": "Talabalar imtihondan oldin kechgacha o'qiydi.", "usage_notes": "Shows hard work"},
    {"id": "c1_idioms_013", "word": "cut to the chase", "phonetic": "/kʌt tə ðə tʃeɪs/", "part_of_speech": "idiom", "translation_uz": "asosiy mavzuga o'tmoq", "definition": "To get to the main point", "example": "Let's cut to the chase.", "example_uz": "Keling, asosiy mavzuga o'taylik.", "usage_notes": "Business context"},
    {"id": "c1_idioms_014", "word": "get out of hand", "phonetic": "/ɡet aʊt əv hænd/", "part_of_speech": "idiom", "translation_uz": "nazoratdan chiqmoq", "definition": "To become uncontrollable", "example": "The situation got out of hand.", "example_uz": "Vaziyat nazoratdan chiqdi.", "usage_notes": "Used for chaos"},
    {"id": "c1_idioms_015", "word": "on the same page", "phonetic": "/ɒn ðə seɪm peɪdʒ/", "part_of_speech": "idiom", "translation_uz": "bir xil fikrda bo'lmoq", "definition": "To think the same way", "example": "Are we on the same page?", "example_uz": "Biz bir xil fikrdamizmi?", "usage_notes": "Used in meetings"}
